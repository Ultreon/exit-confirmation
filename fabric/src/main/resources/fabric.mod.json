{
  "schemaVersion": 1,
  "id": "exit_confirm",
  "version": "${version}",

  "name": "Exit Confirmation",
  "description": "Shows a exit confirmation screen when trying to close Minecraft.",
  "authors": [
    "Qboi123"
  ],
  "contact": {
    "homepage": "https://ultreon.github.io/web/",
    "sources": "https://github.com/Ultreon/exit-confirmation",
    "issues": "https://github.com/Ultreon/exit-confirmation/issues"
  },

  "license": "All Rights Reserved",
  "icon": "assets/exit_confirm/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "com.ultreon.mods.exitconfirmation.ExitConfirmation"
    ]
  },
  "mixins": [
    "exit-confirmation.mixins.json"
  ],
  "accessWidener": "exit-confirmation.accesswidener",
  "depends": {
    "fabricloader": ">=0.14.6",
    "legacy-fabric-api": "*",
    "minecraft": ">=1.8.9 <1.9",
